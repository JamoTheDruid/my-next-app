# Stable Debian-based image (good for argon2 native bindings)
FROM node:22-slim

# Install openssl (required by Prisma in many slim images)
RUN apt-get update -y && apt-get install -y openssl && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy dependency manifests
COPY package.json package-lock.json* ./

# Install dependencies inside container
RUN npm ci

# Copy rest of source
COPY . .

# Dev server port
EXPOSE 3000

CMD ["npm", "run", "dev"]
